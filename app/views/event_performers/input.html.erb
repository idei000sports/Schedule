<div class="container-fluid">

	<div class="row">
		<div class="col">
			<%= @event.event_title %>
			<%= @event.id %>
		</div>
	</div>
	<div class="row">
		<div class="col">
			<p>現在登録されている出演者</p>
		</div>
	</div>

	<div class="row">
		<div class="col">
			<table class="table">
			<caption>出演者</caption>
			<tr><th>出演者名</th><th>削除</th></tr>
			<% @event_performers.each do |event_performer| %>
					
					<tr>
					<td><%= event_performer.performer_name %>イベントID<%= event_performer.event_id %></td>
					<td><%= link_to '削除', event_performer, method: :delete, data: { confirm: '本当に削除しますか？' } %></td>
					</tr>
			<% end %>
			</table>
		</div>
	</div>

	<div class="row">
		<%= form_with model: @event_performer, local: true do |form| %>
		<div class="col">
				<%= form.hidden_field :event_id, value:@event.id, readonly: true %>
				<div class="form-group">
					<lael for="performer_name">出演者 : <label>
					<%= form.text_field :performer_name,  class:'form-control', required: true %>
				</div>
			</div>
		</div>

	<div class="row">
		<div class="col">
			<%= form.submit "追加する", class:'btn', 'data-disable-with' => false %>
		</div>
		<% end %>
	</div>
</div>


