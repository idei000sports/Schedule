

<div class="container-fluid">
	<div class="row">
		<div class="col">
		<h2><%= link_to @event.event_title, @event %> | 情報の修正</h2>
		</div>
		<div class="col">
			<td><%= link_to '削除', @event, method: :delete, data: { confirm: '本当に削除しますか？' } %></td>
		</div>

	</div>
	<div class="row">
		<div class="col">
			<%= link_to '出演者の編集', input_event_performers_path(id: @event) %>
			<%= link_to '修正中', input_event_performers_path(@event) %>
		</div>
		<div class="col">
			<%= link_to '画像の編集', input_images_path(id:@event) %>
		</div>
		<div class="col">
			<%= link_to 'ジャンルの編集', input_genres_path(id:@event) %>
		</div>
	</div>
	<div class="row">
		<div class="col">
			<%= render 'form', event: @event %>
		</div>
	</div>
</div>