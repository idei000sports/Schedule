<%= form_with(url: select_path, method: :get, local: true) do |form| %>
		<div class="form-group row">
			<%= form.label :start_date, "開催日", class:'control-label' %>
			<%= form.date_field :start_date,
				{class:'form-control',
				required: true}%>
		</div>
		<div class="form-group row">
			<%= form.label :prefecture_id, "開催地", class:'control-label' %>
			<%= form.collection_select :prefecture_id,  @prefecture, :id, :name,{ include_blank: '都道府県を選択'}, { class:'form-control'} %>
		</div>
		<div class="form-group row">
			<div class="col text-center">
				<%= form.submit "探す", class:'btn', name:nil %>
			</div>
		</div>

<% end %>