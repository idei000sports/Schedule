<% @page_title = @date.to_s(:date_jp) %>

<div class="container-fluid">
	<div class="row">
		<div class="col text-center">
			<h3>
				<%= l(@date, format: :date_and_wday) %>
			</h3>
		</div>
	</div>
	<div class="row">
		<div class="col text-center">
			<%= link_to select_path(start_date: (@date -1), prefecture_id: @prefecture_id), method: :get  do %>
				<span class="material-icons">arrow_back</span>
			<% end %>
		</div>
		<div class="col-auto"></div>
		<div class="col text-center">
			<%= link_to select_path(start_date: (@date +1), prefecture_id: @prefecture_id), method: :get do %>
				<span class="material-icons">arrow_forward</span>
			<% end %>
		</div>
	</div>

	<div class="row">
		<div class="col-10">
			<% @events.each do |event| %>
				<%= render 'layouts/event', event: event %>
			<% end %>

			<div class="row">
				<div class="col">
					<%= paginate(@events) %>
				</div>
			</div>
		</div>

	</div>
</div>
